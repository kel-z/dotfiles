{
  "$schema": "https://opencode.ai/config.json",
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    },
    "diff_style": "auto"
  },
  "theme": "system",
  "share": "disabled",
  "permission": {
    "bash": {
      "git push *": "deny",
      "rm *": "ask",
      "git reset *": "deny",
      "git commit *": "ask"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny"
    }
  },
  "compaction": {
    "auto": false
  }
}
